<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <HBox alignment="TOP_CENTER">
        <children>
          <VBox fx:id="helpGuideContainer" alignment="CENTER_RIGHT">
            <padding>
              <Insets top="5" right="25" bottom="5" left="15" />
            </padding>
          </VBox>

          <VBox alignment="TOP_LEFT">
            <children>
              <Label fx:id="message"></Label>
              <Hyperlink layoutX="0.0" layoutY="0.0" onAction="#openLink" text="our UserGuide" />
            </children>
          </VBox>

        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
